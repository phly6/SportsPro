@model IEnumerable<SportsPro.Models.Technician>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>

<body>
    <h4>Technician Manager</h4>
    <table class="table table-striped table-bordered">
        <thead class="bg-white text-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td class="actions">
                        <a asp-action="TechnicianForm" asp-route-id="@item.TechnicianID" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                    <td class="actions">
                        <a asp-action="Delete" asp-route-id="@item.TechnicianID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-start mt-3">
    <a asp-action="TechnicianForm" class="btn btn-primary">Add Technician</a>
    
</div>

</body>


</html>
