@model SportsPro.Models.Customer

@{
    ViewData["Title"] = Model?.CustomerID == 0 ? "Add Customer" : "Edit Customer";
}

<h2 class="mt-3">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Save">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="CustomerID" />

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">First Name</label>
                    <div class="col-sm-9">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">Last Name</label>
                    <div class="col-sm-9">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">Email</label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">Phone</label>
                    <div class="col-sm-9">
                        <input asp-for="Phone" class="form-control" type="tel" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">Address</label>
                    <div class="col-sm-9">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">City</label>
                    <div class="col-sm-9">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">State</label>
                    <div class="col-sm-9">
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">Postal Code</label>
                    <div class="col-sm-9">
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <label class="col-sm-3 col-form-label text-start">Country</label>
                    <div class="col-sm-9">
                        <select asp-for="CountryID" asp-items="ViewBag.Countries" class="form-control" required>
                            <option value="">-- Select Country --</option>
                        </select>
                        <span asp-validation-for="CountryID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <div class="col-sm-9 offset-sm-3">
                        <button type="submit" class="btn btn-primary">
                            @(Model?.CustomerID == 0 ? "Add Customer" : "Save Changes")
                        </button>
                        <a asp-action="List" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
